<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1" 
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">
    
    <LinearLayout android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:background="#ff78dc46" android:orientation="horizontal">
	    <TextView android:layout_width="fill_parent" 
	    android:id="@+id/tvInsert_date" 
	    android:layout_height="40dip" 
	    android:paddingLeft="15dip" 
	    android:gravity="center_vertical" 
	    android:textColor="#ffffffff" android:textSize="20dip" android:text="新增次分類">
	    </TextView>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" 
    android:id="@+id/linearLayout1" 
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
        <TextView android:id="@+id/textView1" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="15dip" 
        android:textColor="#000000" 
        android:layout_width="wrap_content" android:layout_marginTop="12dip" android:text="主類別">
        </TextView>
        <Spinner android:scrollHorizontally="true"
		android:id="@+id/group" 
		android:layout_marginRight="10dip" 
        android:layout_marginTop="15dip" 
        android:layout_marginLeft="10dip"
		android:layout_height="40dip" 
		android:layout_width="0dp" android:layout_weight="3.98" android:paddingLeft="10dip"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" 
    android:id="@+id/linearLayout2" 
    android:background="#FFFFFF" android:layout_height="fill_parent">
    	<TextView android:text="名稱" 
        android:id="@+id/textView2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip" 
        android:textColor="#000000" android:layout_marginTop="8dip">
        </TextView>
        <EditText android:layout_weight="1" 
        android:id="@+id/nameEditText"
        android:layout_marginRight="10dip" 
        android:layout_marginLeft="10dip" 
        android:layout_width="fill_parent" 
        android:layout_height="40dip" android:layout_marginTop="10dip">
        </EditText>
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent" 
    android:id="@+id/linearLayout9" 
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
        <Button android:text="確定" 
        android:id="@+id/newAccountButton" 
        android:layout_width="fill_parent" 
        android:layout_margin="10dip" android:layout_height="40dip">
        </Button>    	
    </LinearLayout>
</LinearLayout>
</ScrollView>